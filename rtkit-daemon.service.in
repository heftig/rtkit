[Unit]
Description=RealtimeKit Scheduling Policy Service
After=syslog.target

[Service]
ExecStart=@LIBEXECDIR@/rtkit-daemon
Type=dbus
BusName=org.freedesktop.RealtimeKit1
NotifyAccess=main
ControlGroup=cpu:/

[Install]
WantedBy=graphical.target
